# ========================================
# Telegram Bot Configuration
# ========================================
# Токен бота получить у @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ID целевого чата/группы для публикации постов
# Для получения ID: отправьте любое сообщение в группу,
# затем используйте https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_TARGET_CHAT_ID=your_target_chat_id

# ========================================
# Telegram Client Configuration
# ========================================
# API credentials с https://my.telegram.org
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# Имя файла сессии (создастся автоматически)
TELEGRAM_SESSION_NAME=aggregator_session

# ========================================
# VK API Configuration
# ========================================
# Токен доступа VK API
# Получить: https://vkhost.github.io/
TELEGRAM_VK_ACCESS_TOKEN=your_vk_access_token

# Версия VK API
VK_API_VERSION=5.131

# ========================================
# Database Configuration
# ========================================
# URL базы данных (SQLite по умолчанию)
DATABASE_URL=sqlite+aiosqlite:///./data/aggregator.db

# ========================================
# Logging Configuration
# ========================================
# Уровень логирования: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=logs/bot.log

# ========================================
# Bot Behavior Configuration
# ========================================
# Интервал между проверками источников (секунды)
SCRAPE_INTERVAL_SECONDS=60

# Максимум запросов в минуту к API
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# Задержка перед повторной проверкой поста (секунды)
# По ТЗ: 10 минут = 600 секунд
POST_CHECK_DELAY_SECONDS=600
